{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ person.surname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('person_edit', { 'id': person.id }) }}">Edit</a>
        </li>
        <br>
        <li>
            <a href="{{ path('index') }}">Back to the list</a>
        </li>
        {#<li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>#}
    </ul>

    ilość adresow: {{person.address|length}}<br>

    {% for address in person.address %}
        <table>
            <tbody>
                <tr>
                    <th>City</th>
                    <td>{{ address.city }}</td>
                </tr>
                <tr>
                    <th>Street</th>
                    <td>{{ address.street }}</td>
                </tr>
                <tr>
                    <th>house number</th>
                    <td>{{ address.houseNumber }}</td>
                </tr>
                <tr>
                    <th>apartment number</th>
                    <td>{{ address.apartmentNumber }}</td>
                </tr>        
            </tbody>
        </table>
        <ul>
            <li>
                <a href="{{ path('address_edit', { 'id': address.id }) }}">edit address</a>
            </li>
        </ul>
    {% endfor %}
{% endblock %}
